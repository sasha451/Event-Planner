<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_margin"
    android:background="@drawable/task_selector"
    android:clickable="true">
    <TextView android:id="@+id/text_task"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/text_color"/>
    <TextView android:id="@+id/text_due_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_task"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:textColor="@color/text_color"/>
    <ImageView android:id="@+id/image_priority"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_margin"
        android:background="@drawable/medium_priority"/>
</RelativeLayout>